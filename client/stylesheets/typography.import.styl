body 
  font-family bodyfont

h1, h2, h3, h4, h5, h6
  font-family headingfont
  font-weight 600
  margin 0 0 1.5rem 0

h1
  font-size 2.2rem
h2 
  font-size 2rem
h3 
  font-size 1.8rem
h4 
  font-size 1.6rem
h5 
  font-size 1.4rem
h6 
  font-size 1.2rem

+above(medium)
  h1 
    font-size 2.6rem
  h2 
    font-size 2.5rem
  h3 
    font-size 2.3rem
  h4 
    font-size 2rem
  h5 
    font-size 1.8rem
  h6 
    font-size 1.3rem

p 
  font-family bodyfont
  font-size 1.2rem
  line-height 1.5em
  color copycolor
  margin 0 0 1.5rem 0

a 
  text-decoration none
  color inherit
  &:hover
    text-decoration underline

ul 
  margin 0
  padding 0
  list-style-type none
